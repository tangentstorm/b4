#!/bin/env lilt
# ------------------------------------------
# console wrapper for b4 virtual machine
# ------------------------------------------

dek:readdeck["lil/mb4.deck"]
mb4:dek.modules.mb4.value
mb4.set_echo[on echo s do print[s] end]
if (count args) > 2
  shell["sleep 0.01"]
  mb4.b4i @ "\n" split read[args[2]]
else
  while 1 mb4.b4i[input["b4i> "]] end
end
